---
import Layout from '../layouts/Layout.astro';
import Project from '../components/Project.astro';
import projectData from '../data/projects.json';
import headshot from '../images/headshot.png';
import bracket from '../icons/bracket.svg';
import bike from '../icons/bike.svg';
import controller from '../icons/controller.svg';
import flower from '../icons/flower.svg?raw';
---

<script>
  const svg = document.querySelector('#flower');
  const svgLocation = svg.getBoundingClientRect();
  const offset = svgLocation.y + svgLocation.height;

  const animateSection = svg?.querySelectorAll('g');

  // Calculate the position when the element should start animating
  // Add animation classes if in viewport then remove eventlistener
  function handleScroll() {
    let viewBottom = window.scrollY + window.innerHeight;
    if (viewBottom > offset) {
      animateSection[0].classList.add('line-plant2-pot');
      animateSection[1].classList.add('line-plant2-plant');
      document.removeEventListener('scroll', handleScroll);
    }
  }

  document.addEventListener('scroll', handleScroll);
</script>

<Layout title="Sarah dePalo | Developer">
  <div class="container">
    <!-- This will be moved to the layout component once done -->
    <nav>
      <div>
        <h2>Sarah dePalo</h2>
      </div>
      <div>
        <ul>
          <li>
            <a href="#">Resume</a>
          </li>
        </ul>
      </div>
    </nav>
    <section class="hero">
      <div class="wrapper">
        <div class="headshot-container">
          <img
            src={headshot}
            alt="Developer smiling against a pink background, eager for you to reach out on LinkedIn"
            class="headshot"
          />

          <div class="gradient-circle">
            <img src={bracket} alt="" />
          </div>
          <div class="gradient-circle">
            <img src={bike} alt="" />
          </div>
          <div class="gradient-circle">
            <img src={controller} alt="" />
          </div>
        </div>
        <div class="name">
          <h1>
            <span class="weight-500">Hi, I'm Sarah,</span>
            <br />
            Developer & Marketer
          </h1>
        </div>
        <div class="description">
          <p>Iâ€™m passionate about tackling new challenges and delivering impactful solutions.</p>
          <p>
            As a marketing web developer, I focus on modernizing our credit union while ensuring our
            members have seamless and exceptional experiences.
          </p>
          <p class="small">
            Outside of work, you'll find me cooking up Italian recipes, exploring local trails, or
            adding to my plant collection (because there's always room for one more ðŸŒ¼).
          </p>
        </div>
      </div>
    </section>
  </div>

  <main>
    <section class="projects__wrapper">
      <div class="title-container">
        <!-- Check if this is the right format. Also can create a function to create icon components -->
        <Fragment set:html={flower} />
        <h3 id="projectsTitle">Recent Projects & Accomplishments</h3>
        <p>I'm always up to something. Here are some of my featured works.</p>
      </div>
      <div class="projects">
        <!-- Pull this info from a JSON file instead and then map through it to create the components -->
        {
          projectData.map((project) => (
            <Project
              image={project.image}
              alt={project.alt}
              title={project.title}
              description={project.description}
              tags={project.tags}
              buttons={project.buttons}
            />
          ))
        }
      </div>
    </section>
  </main>
</Layout>

<style>
  nav {
    width: 90%;
    margin: 0 auto;
    padding: 25px 0px;
    border-bottom: 1px solid #ffffff79;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    color: #fff;
  }
  nav p {
    font-weight: bold;
    font-size: 20px;
    margin: 0;
  }

  nav ul {
    margin: 0px;
    list-style-type: none;
  }

  nav a {
    text-decoration: none;
    color: #fff;
  }
  main {
    background: #fff;
    background-image: url('/clean-gray-paper.png');
  }
  .projects__wrapper {
    margin: auto;
    padding: 5rem 1.5rem;
    width: 1024px;
    max-width: 100%;
  }

  .title-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-bottom: 2rem;
  }

  .title-container + p {
    text-align: center;
  }

  .projects {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 5rem;
  }

  .container {
    background: #324a34;
    background-image: url('/hero-bg.png');
    background-repeat: no-repeat;
    background-size: cover;
    background-position: inherit;
    padding: 0;
    margin: 0;
  }

  .hero {
    padding: 50px 0px;
  }
  .wrapper {
    display: grid;
    gap: 15px 15px;
    grid-template-columns: 3fr 4fr;
    margin: auto;
    padding: 0 1rem;
    max-width: 100%;
    width: 1024px;
    color: #fff;
  }

  .headshot-container {
    position: relative;
    justify-self: stretch;
    align-self: center;
  }

  .headshot {
    display: block;
    width: 100%;
    max-width: 400px;
    position: relative;
  }

  .name {
    align-self: center;
  }

  .description {
    grid-column-start: span 2;
    padding: 0 1rem;
  }

  h1 {
    font-weight: 800;
    font-size: 24px;
    margin: 0;
    color: #fff;
    animation: fadein 2s forwards;
  }

  nav h2 {
    margin: 0px;
    font-size: 20px;
  }

  h3 {
    text-align: center;
    display: block;
    margin-top: 10px;
  }
  h3 ~ p {
    text-align: center;
    max-width: 100%;
  }

  h3::after {
    background: #0c823c;
    content: '';
    display: block;
    height: 2px;
    margin-top: 1.5em;
    width: 4em;
    margin: 0.5em auto 0;
  }

  .weight-500 {
    font-weight: 500;
  }
  .description p {
    animation: fadein-delay 2.5s forwards;
  }

  .small {
    font-size: 0.87rem;
  }

  .gradient-circle {
    background: linear-gradient(-45deg, #bbcd27, #0c823c, #324a34);
    background-size: 400% 400%;
    display: none;
    -webkit-animation: fadeInScale 1s forwards, gradient 5s ease infinite;
    -moz-animation: fadeInScale 1s forwards, gradient 5s ease infinite;
    animation: fadeInScale 1s forwards, gradient 5s ease infinite;
    animation-delay: 1.2s;
    position: absolute;
    align-items: center;
    opacity: 0;
    transform: scale(0.2) translate(-50%, -50%);
    transform-origin: center;
    z-index: 1;
    border-radius: 100%;
    max-height: 100px;
    max-width: 100px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  .gradient-circle img {
    width: 80%;
    height: 80%;
    margin: 0 auto;
  }

  .gradient-circle:nth-of-type(1) {
    top: 25%;
    left: 8%;
    height: 18%;
    width: 25%;
  }

  .gradient-circle:nth-of-type(2) {
    top: 50%;
    left: 90%;
    width: 18%;
    height: 13%;
    animation-delay: 1.5s;
  }

  .gradient-circle:nth-of-type(3) {
    top: 80%;
    left: 7%;
    width: 20%;
    height: 15%;
    animation-delay: 1.8s;
  }

  @keyframes fadein {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  @keyframes fadein-delay {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInScale {
    0% {
      opacity: 0;
      transform: scale(0.2) translate(-50%, -50%);
    }
    100% {
      opacity: 1;
      transform: scale(1) translate(-50%, -50%);
    }
  }

  @-webkit-keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
  @-moz-keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  @media (min-width: 680px) {
    .wrapper {
      gap: 24px 40px;
      max-width: 80vw;
      grid-template-columns: 3fr 5fr;
    }
    .hero {
      padding: 80px 0px;
    }
    .headshot-container {
      grid-row-start: span 2;
      justify-self: center;
    }

    .name {
      align-self: end;
    }

    .description {
      grid-column-start: 2;
      grid-row-start: 2;
      padding: 0;
    }
    h1 {
      font-size: 2rem;
    }

    .gradient-circle {
      display: flex;
    }
  }
  @media (min-width: 1024px) {
    .wrapper {
      gap: 24px 60px;
      grid-template-columns: 3fr 5fr;
    }

    h1 {
      font-size: 2.5rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .description p,
    h1 {
      animation: none;
    }
    .gradient-circle {
      animation: none;
      opacity: 1;
      transform: scale(1) translate(-50%, -50%);
    }
  }
</style>

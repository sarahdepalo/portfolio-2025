---
import Layout from '../layouts/Layout.astro';
import Project from '../components/Project.astro';
import headshot from '../images/headshot.png';
import bracket from '../icons/bracket.svg';
import bike from '../icons/bike.svg';
import controller from '../icons/controller.svg';
import flower from '../icons/flower.svg';
---

<Layout title="Sarah dePalo | Developer">
  <div class="container">
    <!-- This will be moved to the layout component once done -->
    <nav>
      <p>Sarah</p>
      <ul>
        <li>
          <a href="#">Test Link</a>
        </li>
      </ul>
    </nav>
    <section class="hero">
      <div class="wrapper">
        <div class="headshot-container">
          <img
            src={headshot}
            alt="Developer smiling against a pink background, eager for you to reach out on LinkedIn"
            class="headshot"
          />

          <div class="gradient-circle">
            <img src={bracket} alt="" />
          </div>
          <div class="gradient-circle">
            <img src={bike} alt="" />
          </div>
          <div class="gradient-circle">
            <img src={controller} alt="" />
          </div>
        </div>
        <div class="name">
          <h1>
            <span class="weight-500">Hi, I'm Sarah,</span>
            <br />
            Developer & Creator
          </h1>
        </div>
        <div class="description">
          <p>
            I'm excited to tackle new challenges and contribute to innovative projects that are
            inclusive and accessible.
          </p>
          <p>
            Currently, I work as a marketing web developer, constantly seeking ways to bring our
            credit union into the future while effectively serving our member base.
          </p>
          <p class="small">
            When I'm not coding, you can find me cooking Italian food, exploring nearby trails, or
            shopping for new plants I don't need. ðŸŒ¼
          </p>
        </div>
      </div>
    </section>
  </div>

  <main>
    <section class="projects__wrapper">
      <h3>Recent Projects</h3>
      <img src={flower} alt="" />
      <p>I'm always coding something. Here are some of my featured works.</p>
      <div class="projects">
        <!-- Pull this info from a JSON file instead and then map through it to create the components -->
        <Project
          image="shiba-tweet.png"
          alt="tweet with a shiba inu and a quote from Winston Churchill"
          title="Shiba Inu Twitter Bot"
          description="Before Twitter started suspending bots and raising their API prices, I created a fun little bot that tweeted inspirational quotes with Shiba Inu pictures daily. The bot also runs every 5 minutes to reply to any mentions with another quote and image."
          tags={['Python', 'AWS', 'Flask']}
          buttons={[
            {
              text: 'Check Out the Code',
              href: 'https://github.com/sarahdepalo/twitter-bot',
            },
            {
              text: 'Read the Blog Post',
              href: 'https://sarahdepalo.hashnode.dev/create-a-twitter-bot-with-python',
            },
          ]}
        />
        <Project
          image="shiba-tweet.png"
          alt="tweet with a shiba inu and a quote from Winston Churchill"
          title="Shiba Inu Twitter Bot"
          description="Lorem ipsum"
          tags={['JavaScript', 'React']}
          buttons={[
            {
              text: 'Check out the code',
              href: 'https://github.com/sarahdepalo/twitter-bot',
            },
          ]}
        />
      </div>
    </section>
  </main>
</Layout>

<style>
  nav {
    width: 90%;
    margin: 0 auto;
    padding: 25px 0px;
    border-bottom: 1px solid #ffffff79;
    display: flex;
    flex-direction: row;
    align-items: center;
    color: #fff;
  }
  nav p {
    font-weight: bold;
    font-size: 20px;
    margin: 0;
  }

  nav ul {
    margin: 0px;
    list-style-type: none;
  }

  nav a {
    text-decoration: none;
    color: #fff;
  }
  main {
    background: #ffe5e8;
  }
  .projects__wrapper {
    margin: auto;
    padding: 5rem 1.5rem;
    width: 1024px;
    max-width: 100%;
    background: #ffe5e8;
  }

  .projects {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .container {
    background: #324a34;
    background-image: url('/hero-bg.png');
    background-repeat: no-repeat;
    background-size: cover;
    background-position: inherit;
    padding: 0;
    margin: 0;
  }

  .hero {
    padding: 50px 0px;
  }
  .wrapper {
    display: grid;
    gap: 15px 15px;
    grid-template-columns: 3fr 4fr;
    margin: auto;
    padding: 0 1rem;
    max-width: 100%;
    width: 1024px;
    color: #fff;
  }

  .headshot-container {
    position: relative;
    justify-self: stretch;
    align-self: center;
  }

  .headshot {
    display: block;
    width: 100%;
    max-width: 400px;
    position: relative;
  }

  .name {
    align-self: center;
  }

  .description {
    grid-column-start: span 2;
    padding: 0 1rem;
  }

  h1 {
    font-weight: 800;
    font-size: 24px;
    margin: 0;
    color: #fff;
    animation: fadein 2s forwards;
  }

  h3 {
    text-align: center;
    display: block;
  }
  h3 ~ p {
    text-align: center;
    max-width: 100%;
  }

  h3::after {
    background: #a0ab92;
    content: '';
    display: block;
    height: 2px;
    margin-top: 1.5em;
    width: 4em;
    margin: 1em auto 0;
  }

  .weight-500 {
    font-weight: 500;
  }
  .description p {
    animation: fadein-delay 2.5s forwards;
  }

  .small {
    font-size: 0.87rem;
  }

  .gradient-circle {
    background: linear-gradient(-45deg, #bbcd27, #0c823c, #324a34);
    background-size: 400% 400%;
    display: none;
    -webkit-animation: fadeInScale 1s forwards, gradient 5s ease infinite;
    -moz-animation: fadeInScale 1s forwards, gradient 5s ease infinite;
    animation: fadeInScale 1s forwards, gradient 5s ease infinite;
    animation-delay: 1.2s;
    position: absolute;
    align-items: center;
    opacity: 0;
    transform: scale(0.2) translate(-50%, -50%);
    transform-origin: center;
    z-index: 1;
    border-radius: 100%;
    max-height: 100px;
    max-width: 100px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  .gradient-circle img {
    width: 80%;
    height: 80%;
    margin: 0 auto;
  }

  .gradient-circle:nth-of-type(1) {
    top: 25%;
    left: 8%;
    height: 18%;
    width: 25%;
  }

  .gradient-circle:nth-of-type(2) {
    top: 50%;
    left: 90%;
    width: 18%;
    height: 13%;
    animation-delay: 1.5s;
  }

  .gradient-circle:nth-of-type(3) {
    top: 80%;
    left: 7%;
    width: 20%;
    height: 15%;
    animation-delay: 1.8s;
  }

  @keyframes fadein {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  @keyframes fadein-delay {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInScale {
    0% {
      opacity: 0;
      transform: scale(0.2) translate(-50%, -50%);
    }
    100% {
      opacity: 1;
      transform: scale(1) translate(-50%, -50%);
    }
  }

  @-webkit-keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
  @-moz-keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  @media (min-width: 680px) {
    .wrapper {
      gap: 24px 40px;
      max-width: 80vw;
      grid-template-columns: 3fr 5fr;
    }
    .hero {
      padding: 80px 0px;
    }
    .headshot-container {
      grid-row-start: span 2;
      justify-self: center;
    }

    .name {
      align-self: end;
    }

    .description {
      grid-column-start: 2;
      grid-row-start: 2;
      padding: 0;
    }
    h1 {
      font-size: 2rem;
    }

    .gradient-circle {
      display: flex;
    }
  }
  @media (min-width: 1024px) {
    .wrapper {
      gap: 24px 60px;
      grid-template-columns: 3fr 5fr;
    }

    h1 {
      font-size: 2.5rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .description p,
    h1 {
      animation: none;
    }
    .gradient-circle {
      animation: none;
      opacity: 1;
      transform: scale(1) translate(-50%, -50%);
    }
  }
</style>
